<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="10dp"
	android:background="@android:color/white"
	tools:context="com.pyt.postyourfun.Fragment.RatingFragment">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="100dp"
			android:id="@+id/imageView3"
			android:src="@drawable/logo2"
			android:scaleType="fitXY" />

		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/scrollView2">

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent">
				<!--
						<ImageView
							android:layout_width="wrap_content"
							android:layout_height="100dp"
							android:id="@+id/imageView4"
							android:src="@drawable/logo2"
							android:scaleType="fitXY"/>
				-->
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Selet your park"
					android:id="@+id/textView"
					android:layout_gravity="center_horizontal" />

				<Spinner
					android:layout_width="240dp"
					android:layout_height="wrap_content"
					android:id="@+id/theme_selecter"
					android:spinnerMode="dropdown"
					android:layout_gravity="center_horizontal" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Select your ride"
					android:id="@+id/textView2"
					android:layout_marginTop="5dp"
					android:layout_gravity="center_horizontal" />

				<Spinner
					android:layout_width="240dp"
					android:layout_height="wrap_content"
					android:id="@+id/ride_selector"
					android:spinnerMode="dropdown"
					android:layout_gravity="center_horizontal" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Rate your fun at The extreme thempark in Norway"
					android:id="@+id/txt_thempark"
					android:layout_marginTop="5dp"
					android:layout_gravity="center_horizontal" />

				<EditText
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:inputType="textMultiLine"
					android:ems="10"
					android:id="@+id/rate_text"
					android:hint="Comment"
					android:layout_marginTop="5dp"
					android:background="@xml/edittext_background"
					android:padding="3dp" />

				<RelativeLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="match_parent">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:text="Speed"
						android:id="@+id/textView3"
						android:layout_marginTop="5dp"
						android:layout_gravity="center_vertical"
						android:layout_centerVertical="true" />

					<RatingBar
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/speed_rate"
						android:stepSize="1.0"
						android:layout_marginRight="3dp"
						android:layout_gravity="right"
						android:layout_alignParentRight="true" />
				</RelativeLayout>

				<RelativeLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="match_parent">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:text="G-Force"
						android:id="@+id/textView4"
						android:layout_marginTop="5dp"
						android:layout_gravity="center_vertical"
						android:layout_centerVertical="true" />

					<RatingBar
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/g_force_rate"
						android:stepSize="1.0"
						android:layout_marginRight="3dp"
						android:layout_alignParentRight="true" />
				</RelativeLayout>

				<RelativeLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="match_parent">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:text="Adrenaline kick"
						android:id="@+id/textView5"
						android:layout_marginTop="5dp"
						android:layout_gravity="center_vertical"
						android:layout_centerVertical="true" />

					<RatingBar
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/adrenaline_rate"
						android:stepSize="1.0"
						android:layout_gravity="right"
						android:layout_alignParentRight="true" />
				</RelativeLayout>

				<Button
					android:layout_width="240dp"
					android:layout_height="50dp"
					android:background="@xml/fb_share_btnselector"
					android:id="@+id/btn_fb_share"
					android:layout_gravity="bottom|center_horizontal"
					android:layout_marginBottom="10dp" />

			</LinearLayout>
		</ScrollView>
	</LinearLayout>

</FrameLayout>
